<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    android:alpha="0.9">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:alpha="0.9"
        android:elevation="15dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productimage"
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.301"
                app:srcCompat="@drawable/saridonimg" />

            <TextView
                android:id="@+id/productname"
                android:layout_width="141dp"
                android:layout_height="61dp"
                android:fontFamily="@font/anek_gurmukhi_semibold"
                android:padding="5dp"
                android:text="Saridon Advance Tablet for 5 in 1 Pain Relief"
                app:layout_constraintStart_toEndOf="@+id/productimage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/company"
                android:layout_width="177dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:text="Bayer Pharmaceuticals Pvt Ltd"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/productimage"
                app:layout_constraintTop_toBottomOf="@+id/productname" />

            <TextView
                android:id="@+id/expiry"
                android:layout_width="176dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:text="Expires on or after: January, 2026"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/productimage"
                app:layout_constraintTop_toBottomOf="@+id/company"
                app:layout_constraintVertical_bias="0.761" />

            <TextView
                android:id="@+id/productquantity"
                android:layout_width="94dp"
                android:layout_height="39dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="strip of 10.0 tablets"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/expiry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productimage"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/mrpbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="MRP Rs.53"
                app:layout_constraintEnd_toStartOf="@+id/off"
                app:layout_constraintStart_toEndOf="@+id/productname"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:text="4% off"
                android:textColor="#39FF05"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mrpbtn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addbtn"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bluebutton"
                android:elevation="15dp"
                android:fontFamily="@font/abril_fatface"
                android:gravity="center"
                android:text="Add"
                android:textColor="#07F8C0"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/price"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:text="Rs. 50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/off" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>